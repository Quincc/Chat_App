<Window x:Class="Chat_App.AuthorizationForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat_App"
        mc:Ignorable="d"
        Title="AuthorizationForm" Height="480" Width="321" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox HorizontalAlignment="Center" Margin="0,124,0,0" TextWrapping="Wrap" Text="Enter username!" VerticalAlignment="Top" Width="239" Height="51" FontFamily="Times New Roman" FontSize="18" FontWeight="Bold" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button Content="Connect" HorizontalAlignment="Center" Margin="0,260,0,0" VerticalAlignment="Top" Height="44" Width="157" FontFamily="Broadway" FontSize="18" Click="Button_Click"/>

    </Grid>
</Window>
